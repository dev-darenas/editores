<div class="row">
  <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
  <div class="col-lg-6">
    <div class="p-5">
      <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'user' } ) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user", id: "exampleInputEmail", placeholder: "Correo Electrónico" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-user", id: "exampleInputPassword", placeholder: "Contraseña" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <div class="custom-control custom-checkbox small">
              <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
              <%= f.label "Recuerdame", class: "custom-control-label" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Ingresar", class: "btn btn-primary btn-user btn-block" %>
        </div>
      <% end %>
      <hr>
      <div class="text-center">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Olvidé mi contraseña", new_password_path(resource_name), class: "small" %><br />
        <% end %>
      </div>
      <div class="text-center">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Crear Cuenta", new_registration_path(resource_name), class: "small" %><br />
        <% end %>
      </div>
    </div>
  </div>
</div>
